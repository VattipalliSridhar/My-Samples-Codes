<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ns1="http://schemas.android.com/apk/res-auto"
    xmlns:ns2="http://schemas.android.com/apk/res-auto"
    xmlns:ns3="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_view_height"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    ns1:cardElevation="5dp"
    ns2:cardPreventCornerOverlap="false"
    ns3:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/imageViewHomeGod"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_card_view_height"
        android:background="#c0d67b"
        android:paddingTop="@dimen/margin_tp"
        android:paddingBottom="@dimen/view_margin"
        android:scaleType="centerInside"
        android:src="@drawable/app_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="bottom"
        android:background="#64000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#98555759"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/view_margin_bottom"
            android:text="@string/dayMonday"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_setting" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
